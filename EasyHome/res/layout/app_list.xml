<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
	android:id="@+id/RelativeLayout01" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:stretchColumns="2"
	android:shrinkColumns="2"
	android:paddingLeft="5dip"
	android:paddingRight="5dip">
	
    <TableRow>
	
	<ImageView android:id="@+id/appicon"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="40dip" 
        android:layout_width="40dip"
	    android:gravity="center"
	    android:scaleType="centerCrop"
        android:layout_margin="5dip"/>
    
	<TextView 
		android:layout_height="fill_parent" 
		android:width="1dip"
		android:background ="#00bbbbbb" /> 
	
    <LinearLayout android:id="@+id/app" 
    	android:orientation="vertical"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="5dip"
        android:padding="4dip">
    
        <TextView android:id="@+id/appname" 
            android:layout_height="wrap_content" 
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:textSize="18dip" 
	        android:textColor="#FFFFFFFF"/>
	
        <TextView android:id="@+id/appsource" 
            android:layout_height="wrap_content" 
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:textSize="14dip" 
            android:textColor="#FF666666"/>
    </LinearLayout>
        
	<TextView 
		android:layout_height="fill_parent" 
		android:width="1dip"
		android:background ="#00bbbbbb" /> 
	
    <TextView android:id="@+id/appversion"
	    android:layout_height="wrap_content"
	    android:layout_width="70dip"
	    android:gravity="center"
	    android:maxLines="2"
	    android:lines="2"
        android:textSize="12dip" 
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:padding="3dip"
        android:background="@drawable/button_layout_unselected"
        android:focusable="true"
        android:focusableInTouchMode="true"
	    android:textColor="#FFDDDDDD"/>
    
	</TableRow>
</TableLayout>