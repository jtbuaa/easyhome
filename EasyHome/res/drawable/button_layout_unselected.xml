<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#AAAAAAFF" android:endColor="#AAFFFFFF" android:angle="90" />
            <corners android:radius="5dip" />
            <padding android:left="1dip" android:top="1dip"
                android:right="1dip" android:bottom="1dip" />
        </shape>
    </item>
 
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#AAAAAAFF" android:endColor="#AAFFFFFF" android:angle="90" />
            <corners android:radius="5dip" />
            <padding android:left="1dip" android:top="1dip"
                android:right="1dip" android:bottom="1dip" />
        </shape>
    </item>
 
    <item >
        <shape>
            <gradient android:startColor="#00AAAAFF" android:endColor="#00FFFFFF" android:angle="90" />
            <corners android:radius="5dip" />
            <padding android:left="1dip" android:top="1dip"
                android:right="1dip" android:bottom="1dip" />
        </shape>
    </item>
</selector>
