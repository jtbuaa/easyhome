<simple.home.jtbuaa.sizedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/shortcut_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_bar"
            android:layout_width="0dip"
            android:layout_height="54dip"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/explorer" />

        <ImageView
            android:id="@+id/shortcut_sms"
            android:layout_width="0dip"
            android:layout_height="54dip"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/shortcut_phone"
            android:layout_width="0dip"
            android:layout_height="54dip"
            android:layout_weight="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/business_bar"
            android:layout_width="0dip"
            android:layout_height="54dip"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/favorites" />
    </LinearLayout>

    <GridView
        android:id="@+id/favos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/shortcut_bar"
        android:layout_marginTop="35dip"
        android:columnWidth="70dip"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:horizontalSpacing="5dip"
        android:numColumns="auto_fit"
        android:paddingBottom="15dip"
        android:scrollingCache="false"
        android:stackFromBottom="true"
        android:verticalSpacing="15dip" />

    <ListView
        android:id="@+id/business"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_above="@id/shortcut_bar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:background="#a0000000"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:scrollingCache="false" />

</simple.home.jtbuaa.sizedRelativeLayout>